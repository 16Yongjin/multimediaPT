<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hufs.dev.yongjin.multimediapt.MainActivity"
    android:weightSum="1"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.33"
        android:weightSum="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/lec8"
            android:weightSum="1"
            android:background="@drawable/border">

            <TextView
                android:text="8강"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/textView7"
                android:textAlignment="center"
                android:layout_weight="0.6"
                android:contextClickable="false"
                android:textColor="#175dac"
                android:textSize="40dp"
                android:gravity="center"
                android:paddingTop="10dp"/>

            <TextView
                android:text="Alô quem fala?"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/textView"
                android:textAlignment="center"
                android:layout_weight="0.4"
                android:textColor="#175dac"
                android:gravity="center"
                android:textSize="22dp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:layout_marginLeft="6dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/lec9"
            android:background="@drawable/border">

            <TextView
                android:text="9강"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:layout_weight="0.6"
                android:contextClickable="false"
                android:textColor="#175dac"
                android:textSize="40dp"
                android:gravity="center"
                android:paddingTop="10dp"/>

            <TextView
                android:text="Você gosta de filmes?"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:layout_weight="0.4"
                android:textColor="#175dac"
                android:gravity="center"
                android:textSize="20dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.33"
        android:weightSum="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/lec10"
            android:background="@drawable/border">

            <TextView
                android:text="10강"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:layout_weight="0.6"
                android:contextClickable="false"
                android:textColor="#175dac"
                android:textSize="40dp"
                android:gravity="center"
                android:paddingTop="10dp"/>

            <TextView
                android:text="O que você vai fazer neste domingo? "
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:layout_weight="0.4"
                android:textColor="#175dac"
                android:gravity="center"
                android:textSize="16dp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:layout_marginLeft="6dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/lec11"
            android:background="@drawable/border">

            <TextView
                android:text="11강"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:layout_weight="0.6"
                android:contextClickable="false"
                android:textColor="#175dac"
                android:textSize="40dp"
                android:gravity="center"
                android:paddingTop="10dp"/>

            <TextView
                android:text="Quero tomar alguma coisa."
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:layout_weight="0.4"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:textSize="20dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.33"
        android:weightSum="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/lec12"
            android:background="@drawable/border">

            <TextView
                android:text="12강"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:layout_weight="0.6"
                android:contextClickable="false"
                android:textColor="@color/colorAccent"
                android:textSize="40dp"
                android:gravity="center"
                android:paddingTop="10dp"/>

            <TextView
                android:text="O que o senhor vai pedir?"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:layout_weight="0.4"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:textSize="18dp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:layout_marginLeft="6dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/wordquiz"
            android:background="@drawable/green_border">

            <TextView
                android:text="단위퀴즈"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:layout_weight="0.6"
                android:contextClickable="false"
                android:textColor="#327b36"
                android:gravity="center"
                android:paddingTop="10dp"
                android:textSize="32dp"/>

            <TextView
                android:text="Alô quem fala?"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:layout_weight="0.4"
                android:textColor="#327b36"
                android:gravity="center"
                android:textSize="22dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
